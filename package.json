{
  "name": "trainer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/"
  ],
  "scripts": {
    "start": "cd app && yarn start",
    "build": "cd app && yarn build",
    "deploy": "cd app && yarn deploy",
    "fmt": "prettier --write '{app/src,packages}/**/*.{js,ts,tsx,json}'",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "^0.14.3",
    "lint-staged": "^7.0.0",
    "prettier": "^1.11.1"
  }
}
