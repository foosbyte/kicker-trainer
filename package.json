{
  "name": "trainer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/"
  ],
  "scripts": {
    "start": "cd app && yarn start",
    "build": "cd app && yarn build",
    "serve": "cd app && yarn serve",
    "deploy": "cd app && yarn deploy",
    "test": "cd app && yarn test",
    "lint": "cd app && yarn lint",
    "fmt": "prettier --write '{app/src,packages}/**/*.{js,ts,tsx,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "semanticPrefix": "chore:",
    "lockFileMaintenance": {
      "enabled": true
    },
    "packageRules": [
      {
        "packagePatterns": [
          "^@types/"
        ],
        "automerge": true
      },
      {
        "packageNames": [
          "hops"
        ],
        "packagePatterns": [
          "^hops-"
        ],
        "groupName": "Update Hops monorepo packages"
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "3.0.0",
    "lint-staged": "9.0.2",
    "prettier": "1.18.2"
  }
}
