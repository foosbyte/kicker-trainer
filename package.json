{
  "name": "trainer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "app/"
  ],
  "scripts": {
    "start": "cd app && yarn start",
    "build": "cd app && yarn build",
    "serve": "cd app && yarn serve",
    "deploy": "cd app && yarn deploy",
    "test": "cd app && yarn test",
    "lint": "cd app && yarn lint",
    "fmt": "prettier --write '{app/src,packages}/**/*.{js,ts,tsx,json}'"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":automergeLinters",
      ":automergeTesters",
      ":automergeTypes"
    ],
    "semanticPrefix": "chore:",
    "lockFileMaintenance": {
      "enabled": true
    },
    "automergeType": "pr-comment",
    "automergeComment": "bors merge",
    "requiredStatusChecks": null,
    "packageRules": [
      {
        "updateTypes": [
          "lockFileMaintenance"
        ],
        "automerge": true
      },
      {
        "packageNames": [
          "hops"
        ],
        "packagePatterns": [
          "^hops-"
        ],
        "groupName": "Update Hops monorepo packages"
      }
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "singleQuote": true
  },
  "devDependencies": {
    "husky": "4.3.0",
    "lint-staged": "10.4.0",
    "prettier": "2.1.2"
  },
  "resolutions": {
    "@types/plotly.js": "1.50.21",
    "@types/puppeteer": "^1.20.0"
  }
}
