{
    "extends": "./node_modules/ts-config/tsconfig.json",
    "compilerOptions": {
        "target": "es2015",
        "module": "esnext",
        "lib": ["dom", "es2015", "es2016", "es2017"],
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "rootDir": "./src",
        "declaration": false,
        "importHelpers": true,
        "emitDecoratorMetadata": true,
        "plugins": [
            {
                "name": "typescript-styled-plugin"
            }
        ],
        "typeRoots": [
            "./node_modules/@types",
            "./typings"
        ]
    }
}