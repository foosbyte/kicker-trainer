{
  "name": "foosball-trainer",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.tsx",
  "license": "MIT",
  "scripts": {
    "start": "hops start",
    "build": "hops build",
    "serve": "hops serve",
    "deploy": "hops lambda deploy",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "hops": {
    "browsers": "last 1 Chrome versions",
    "node": "8.10",
    "workerFile": "<rootDir>/src/service-worker.ts",
    "workerPath": "/sw.js",
    "assetPath": "/assets",
    "locations": [
      "/",
      "/categories",
      "/stats"
    ],
    "aws": {
      "region": "eu-central-1",
      "memorySize": 1024,
      "domainName": "trainer.nerdlabs.it",
      "certificateArn": "arn:aws:acm:us-east-1:440520855754:certificate/2fa97b22-2cb3-4050-9f1f-73b741959fdc"
    },
    "mixins": [
      "./hops-mixins"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "chart.js": "2.7.3",
    "css-loader": "2.1.0",
    "decko": "1.2.0",
    "hops": "11.1.0",
    "hops-lambda": "11.1.0",
    "hops-mobx": "1.0.0",
    "hops-pwa": "11.1.0",
    "hops-styled-components": "11.1.0",
    "hops-typescript": "11.1.0",
    "jam-icons": "2.0.0",
    "lodash.merge": "4.6.1",
    "mobx": "5.9.0",
    "mobx-react": "5.4.3",
    "mobx-utils": "5.1.0",
    "prop-types": "15.6.2",
    "react": "16.7.0",
    "react-chartkick": "0.3.0",
    "react-dat-gui": "2.1.0",
    "react-dom": "16.7.0",
    "react-helmet": "5.2.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "style-loader": "0.23.1",
    "styled-components": "4.1.3",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@babel/core": "7.2.2",
    "@types/chart.js": "2.7.43",
    "@types/expect-puppeteer": "3.3.0",
    "@types/express": "4.16.1",
    "@types/jest": "23.3.13",
    "@types/jest-environment-puppeteer": "2.2.1",
    "@types/lodash.merge": "4.6.4",
    "@types/node": "10.12.21",
    "@types/puppeteer": "1.11.1",
    "@types/react": "16.8.1",
    "@types/react-dom": "16.0.11",
    "@types/react-helmet": "5.0.8",
    "@types/react-router": "4.4.3",
    "@types/react-router-dom": "4.3.1",
    "@types/styled-components": "4.1.7",
    "jest": "23.6.0",
    "jest-puppeteer": "3.9.0",
    "puppeteer": "1.11.0",
    "ts-jest": "23.10.5",
    "tslint": "5.12.1",
    "tslint-config-prettier": "1.17.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "3.6.0",
    "typescript-styled-plugin": "0.13.0"
  }
}
