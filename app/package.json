{
  "name": "foosball-trainer",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.tsx",
  "license": "MIT",
  "scripts": {
    "start": "hops start",
    "build": "hops build",
    "serve": "hops serve",
    "deploy": "hops lambda deploy",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "jest"
  },
  "hops": {
    "extends": "hops-typescript",
    "browsers": "last 1 Chrome versions",
    "node": "6.10.3",
    "workerFile": "./src/service-worker.ts",
    "workerPath": "sw.js",
    "assetPath": "assets",
    "locations": [
      "/",
      "/categories",
      "/stats"
    ],
    "aws": {
      "region": "eu-central-1",
      "stageName": "trainer",
      "memorySize": 1024,
      "domainName": "trainer.nerdlabs.it",
      "certificateArn": "arn:aws:acm:us-east-1:440520855754:certificate/2fa97b22-2cb3-4050-9f1f-73b741959fdc"
    }
  },
  "jest": {
    "preset": "jest-puppeteer",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "chart.js": "2.7.2",
    "decko": "1.2.0",
    "hops-express": "10.4.2",
    "hops-lambda": "10.4.2",
    "hops-mobx": "1.0.0",
    "hops-pwa": "10.4.0",
    "hops-react": "10.4.3",
    "hops-styled-components": "1.0.0",
    "hops-typescript": "1.0.0",
    "mobx": "5.0.3",
    "mobx-react": "5.2.3",
    "mobx-utils": "5.0.0",
    "prop-types": "15.6.2",
    "react": "16.4.1",
    "react-chartkick": "0.2.1",
    "react-dom": "16.4.1",
    "react-helmet": "5.2.0",
    "react-router": "4.3.1",
    "react-router-dom": "4.3.1",
    "styled-components": "3.3.3",
    "tslib": "1.9.3"
  },
  "devDependencies": {
    "@types/chart.js": "2.7.30",
    "@types/express": "4.16.0",
    "@types/jest": "23.3.1",
    "@types/node": "10.5.3",
    "@types/puppeteer": "1.5.1",
    "@types/react": "16.4.7",
    "@types/react-dom": "16.0.6",
    "@types/react-helmet": "5.0.6",
    "@types/react-router": "4.0.29",
    "@types/react-router-dom": "4.3.0",
    "hops": "10.4.0",
    "hops-build": "10.4.4",
    "jest": "23.3.0",
    "jest-puppeteer": "3.2.1",
    "puppeteer": "1.6.1",
    "ts-config": "19.0.0",
    "ts-jest": "23.0.0",
    "tslint": "5.11.0",
    "tslint-config-prettier": "1.14.0",
    "tslint-plugin-prettier": "1.3.0",
    "tslint-react": "3.6.0",
    "typescript-styled-plugin": "0.9.2"
  }
}
