{
  "name": "foosball-trainer",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.tsx",
  "license": "MIT",
  "scripts": {
    "start": "hops start",
    "build": "hops build",
    "serve": "hops serve",
    "deploy": "hops lambda deploy",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "PORT=8080 jest"
  },
  "hops": {
    "browsers": [
      "last 1 Chrome versions",
      "last 2 iOS versions"
    ],
    "node": "12.13",
    "workerFile": "<rootDir>/src/service-worker.ts",
    "workerPath": "/sw.js",
    "assetPath": "/assets",
    "locations": [
      "/",
      "/categories",
      "/stats"
    ],
    "aws": {
      "region": "eu-central-1",
      "memorySize": 1024,
      "domainName": "trainer.nerdlabs.it",
      "certificateArn": "arn:aws:acm:us-east-1:440520855754:certificate/2fa97b22-2cb3-4050-9f1f-73b741959fdc",
      "exclude": [
        "flow-typed/**",
        "typings/**",
        "**/node_modules/plotly.js/**",
        "**/node_modules/typescript/**",
        "**/node_modules/aws-sdk/**",
        "**/node_modules/mapbox-gl/**",
        "**/node_modules/@types/**",
        "**/node_modules/gl-cone3d/**"
      ]
    },
    "mixins": [
      "./hops-mixins"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "css-loader": "3.5.3",
    "decko": "1.2.0",
    "hops": "12.3.0",
    "hops-lambda": "12.3.0",
    "hops-mobx": "1.0.0",
    "hops-pwa": "12.3.0",
    "hops-styled-components": "12.3.0",
    "hops-typescript": "12.3.0",
    "jam-icons": "2.0.0",
    "lodash.merge": "4.6.2",
    "mobx": "5.15.4",
    "mobx-react": "6.2.2",
    "mobx-utils": "5.6.0",
    "nosleep.js": "0.9.0",
    "plotly.js": "1.54.1",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dat-gui": "3.0.0",
    "react-dom": "16.13.1",
    "react-helmet-async": "1.0.6",
    "react-plotly.js": "2.4.0",
    "react-router": "5.2.0",
    "react-router-dom": "5.2.0",
    "style-loader": "1.2.1",
    "styled-components": "5.1.1",
    "tslib": "2.0.0"
  },
  "devDependencies": {
    "@babel/core": "7.9.6",
    "@types/expect-puppeteer": "4.4.1",
    "@types/express": "4.17.6",
    "@types/jest": "26.0.0",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/lodash.merge": "4.6.6",
    "@types/node": "12.12.31",
    "@types/plotly.js": "1.50.12",
    "@types/puppeteer": "1.20.2",
    "@types/react": "16.9.38",
    "@types/react-dom": "16.9.8",
    "@types/react-helmet": "6.0.0",
    "@types/react-plotly.js": "2.2.4",
    "@types/react-router": "5.1.8",
    "@types/react-router-dom": "5.1.5",
    "@types/styled-components": "5.1.0",
    "jest": "26.0.1",
    "jest-puppeteer": "4.4.0",
    "puppeteer": "1.18.0",
    "ts-jest": "26.1.1",
    "tslint": "6.1.2",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "tslint-react": "4.1.0",
    "typescript": "3.9.5",
    "typescript-styled-plugin": "0.15.0"
  }
}