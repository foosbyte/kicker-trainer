{
  "name": "foosball-trainer",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.tsx",
  "license": "MIT",
  "scripts": {
    "start": "hops start",
    "build": "hops build",
    "serve": "hops serve",
    "deploy": "hops lambda deploy",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "PORT=8080 jest"
  },
  "hops": {
    "browsers": [
      "last 1 Chrome versions",
      "last 2 iOS versions"
    ],
    "node": "12.13",
    "workerFile": "<rootDir>/src/service-worker.ts",
    "workerPath": "/sw.js",
    "assetPath": "/assets",
    "locations": [
      "/",
      "/categories",
      "/stats"
    ],
    "aws": {
      "region": "eu-central-1",
      "memorySize": 1024,
      "domainName": "trainer.nerdlabs.it",
      "certificateArn": "arn:aws:acm:us-east-1:440520855754:certificate/2fa97b22-2cb3-4050-9f1f-73b741959fdc",
      "exclude": [
        "flow-typed/**",
        "typings/**",
        "**/node_modules/plotly.js/**",
        "**/node_modules/typescript/**",
        "**/node_modules/aws-sdk/**",
        "**/node_modules/mapbox-gl/**",
        "**/node_modules/@types/**",
        "**/node_modules/gl-cone3d/**"
      ]
    },
    "mixins": [
      "./hops-mixins"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "css-loader": "3.4.2",
    "decko": "1.2.0",
    "hops": "12.1.2",
    "hops-lambda": "12.1.2",
    "hops-mobx": "1.0.0",
    "hops-pwa": "12.1.2",
    "hops-styled-components": "12.1.2",
    "hops-typescript": "12.1.2",
    "jam-icons": "2.0.0",
    "lodash.merge": "4.6.2",
    "mobx": "5.15.4",
    "mobx-react": "6.1.8",
    "mobx-utils": "5.5.5",
    "nosleep.js": "0.9.0",
    "plotly.js": "1.52.3",
    "prop-types": "15.7.2",
    "react": "16.13.1",
    "react-dat-gui": "3.0.0",
    "react-dom": "16.13.1",
    "react-helmet-async": "1.0.4",
    "react-plotly.js": "2.4.0",
    "react-router": "5.1.2",
    "react-router-dom": "5.1.2",
    "style-loader": "1.1.3",
    "styled-components": "5.0.1",
    "tslib": "1.11.1"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@types/expect-puppeteer": "4.4.0",
    "@types/express": "4.17.3",
    "@types/jest": "25.1.4",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/lodash.merge": "4.6.6",
    "@types/node": "12.12.31",
    "@types/plotly.js": "1.50.0",
    "@types/puppeteer": "1.20.2",
    "@types/react": "16.9.30",
    "@types/react-dom": "16.9.6",
    "@types/react-helmet": "5.0.15",
    "@types/react-plotly.js": "2.2.4",
    "@types/react-router": "5.1.4",
    "@types/react-router-dom": "5.1.3",
    "@types/styled-components": "5.0.1",
    "jest": "25.2.4",
    "jest-puppeteer": "4.4.0",
    "puppeteer": "1.18.0",
    "ts-jest": "25.3.0",
    "tslint": "6.1.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.3.0",
    "tslint-react": "4.1.0",
    "typescript": "3.8.3",
    "typescript-styled-plugin": "0.15.0"
  }
}