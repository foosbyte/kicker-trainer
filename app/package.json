{
  "name": "foosball-trainer",
  "version": "1.0.0",
  "private": true,
  "main": "src/main.tsx",
  "license": "MIT",
  "scripts": {
    "start": "hops start",
    "build": "hops build",
    "serve": "hops serve",
    "deploy": "hops lambda deploy",
    "lint": "tslint 'src/**/*.{ts,tsx}'",
    "test": "PORT=8080 jest"
  },
  "hops": {
    "browsers": [
      "last 1 Chrome versions",
      "last 2 iOS versions"
    ],
    "node": "8.10",
    "workerFile": "<rootDir>/src/service-worker.ts",
    "workerPath": "/sw.js",
    "assetPath": "/assets",
    "locations": [
      "/",
      "/categories",
      "/stats"
    ],
    "aws": {
      "region": "eu-central-1",
      "memorySize": 1024,
      "domainName": "trainer.nerdlabs.it",
      "certificateArn": "arn:aws:acm:us-east-1:440520855754:certificate/2fa97b22-2cb3-4050-9f1f-73b741959fdc",
      "exclude": [
        "flow-typed/**",
        "typings/**",
        "**/node_modules/plotly.js/**",
        "**/node_modules/typescript/**",
        "**/node_modules/aws-sdk/**",
        "**/node_modules/mapbox-gl/**",
        "**/node_modules/@types/**",
        "**/node_modules/gl-cone3d/**"
      ]
    },
    "mixins": [
      "./hops-mixins"
    ]
  },
  "jest": {
    "preset": "jest-puppeteer",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/*.+(ts|tsx|js)"
    ]
  },
  "dependencies": {
    "css-loader": "3.2.0",
    "decko": "1.2.0",
    "hops": "11.9.1",
    "hops-lambda": "11.9.1",
    "hops-mobx": "1.0.0",
    "hops-pwa": "11.9.1",
    "hops-styled-components": "11.9.1",
    "hops-typescript": "11.9.1",
    "jam-icons": "2.0.0",
    "lodash.merge": "4.6.2",
    "mobx": "5.13.0",
    "mobx-react": "6.1.3",
    "mobx-utils": "5.4.1",
    "nosleep.js": "0.9.0",
    "plotly.js": "1.49.5",
    "prop-types": "15.7.2",
    "react": "16.9.0",
    "react-dat-gui": "3.0.0",
    "react-dom": "16.9.0",
    "react-helmet": "5.2.1",
    "react-plotly.js": "2.3.0",
    "react-router": "5.1.0",
    "react-router-dom": "5.1.0",
    "style-loader": "1.0.0",
    "styled-components": "4.4.0",
    "tslib": "1.10.0"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@types/expect-puppeteer": "3.3.1",
    "@types/express": "4.17.1",
    "@types/jest": "24.0.18",
    "@types/jest-environment-puppeteer": "4.3.1",
    "@types/lodash.merge": "4.6.6",
    "@types/node": "12.7.8",
    "@types/plotly.js": "1.44.11",
    "@types/puppeteer": "1.19.1",
    "@types/react": "16.9.3",
    "@types/react-dom": "16.9.1",
    "@types/react-helmet": "5.0.10",
    "@types/react-plotly.js": "2.2.4",
    "@types/react-router": "5.1.0",
    "@types/react-router-dom": "5.1.0",
    "@types/styled-components": "4.1.19",
    "jest": "24.9.0",
    "jest-puppeteer": "4.3.0",
    "puppeteer": "1.18.0",
    "ts-jest": "24.1.0",
    "tslint": "5.20.0",
    "tslint-config-prettier": "1.18.0",
    "tslint-plugin-prettier": "2.0.1",
    "tslint-react": "4.1.0",
    "typescript-styled-plugin": "0.14.0"
  }
}
