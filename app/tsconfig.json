{
  "extends": "../node_modules/ts-config/tsconfig.json",
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018"],
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "declaration": false,
    "importHelpers": true,
    "typeRoots": ["../node_modules/@types", "./typings"],
    "strict": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "stripInternal": true,
    "experimentalDecorators": true
  }
}
